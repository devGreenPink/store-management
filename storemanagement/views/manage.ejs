<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>จัดการข้อมูลสินค้า
            
        </title>
        
        <link rel="stylesheet" href="css/navbar.css">
        <link rel="stylesheet" href="/css/table.css">
        
    </head>
    <body>
        <%- include('navbar') %>
       
        
        <div align="right" class="log">
            <a   href="/log-out">ออกจากระบบ</a>
        </div>
        <div>
            <table class="styled-table">
                <thead>
                    <th>ชื่อสินค้า</th>
                    <th>ราคาสินค้า</th>
                    <th>รายละเอียด</th>
                    <th>แก้ไข</th>
                    <th>ลบ</th>
                </thead>


                <tbody>
                    <% Object.values(products).forEach(function(item){%>
                    <tr class="active-row">
                    <th>
                        <%= item.name%>
                    </th>
                    <th>
                        <%= item.price%>
                    </th>
                    <th style="text-align: left;">
                        <%= item.description%>
                    </th>
                    <th>
                        <a class="delete" href="/delete/<%=item._id%>" onclick="return confirm('คุณต้องการลบข้อมูลหรือไม่?')">ลบ</a>
                    </th>
                    <th>
                        <form action="/edit" method="POST">
                            <input type="hidden" name="edit_id" value="<%= item._id%>" >
                            <button type="submit" class="edit">แก้ไข</button>
                        </form>
                    </th>
                </tr>
                <% }) %>
            </tbody>
                
            </table>
            
        
       
    </body>
</html>
